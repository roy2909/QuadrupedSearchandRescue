<launch>
    <arg name="use_rviz" default="true"
        description="Determines whether to use rviz or not - true or false" />
    <node pkg="image_yolo" exec="yolo" name="image_yolo" output="screen">
    </node>

    <node name="rviz2" pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share image_detection)/config/marker_detect.rviz"
    if="'$(var use_rviz)\' == \'true\'')" />


</launch>